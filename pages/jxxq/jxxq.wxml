<view class="list" >
    <view class="item top-avatar" >
        <image src="{{teamInfo.photo.url ? teamInfo.photo.url : 'https://static.jianzhugang.com/mini/image/logo.png'}}"></image>
    </view>
    <view class="itemAlter">机械信息 </view>
    <view class="item-all">
     <view class="item">
       <text class="item-text"> 机械规格:</text>
        <span class="item-note"> {{machinerieInfo.xinghao==null?'':machinerieInfo.xinghao}}</span>
    </view> 
   <view class="item">
       <text class="item-text"> 机械种类:</text>
        <span class="item-note">  {{machinerieInfo.type.text}}
</span>
    </view>
        <view class="item">
       <text class="item-text"> 价格:</text>
        <span class="item-note">   {{machinerieInfo.price}}</span>
    </view>
   <view class="item">
       <text class="item-text">发布时间:</text>
        <span class="item-note"> {{machinerieInfo.createDate}}
        </span>
    </view>
      <view class="item">
       <text class="item-text">地址:</text>
        <span class="item-note"> {{machinerieInfo.streetAddress}}</span>
    </view>


      <view class="item">
       <text class="item-text"> 联系人:</text>
        <span class="item-note"> {{machinerieInfo.contacts}}</span>
    </view>


  <a class="item" href="tel:{{item.userName}}" ng-show="item.starsLevel > 2">
        <text class="item-text">联系电话:</text>
        <!-- bindtap="doCallPhone" -->
        <span class="item-note green tel">{{machinerieInfo.mobile}}</span>
    </a>

     <view class="item">
       <text class="item-text">  机械备注:</text>
        <span class="item-note"> {{machinerieInfo.memo==null? machinerieInfo.shuoming:machinerieInfo.memo}}</span>
    </view>

    </view>
</view>
