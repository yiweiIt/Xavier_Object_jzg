/* 样式修改 */




/*班组团队详情  */

.list {
    position: relative;
    padding-top: 1rpx;
    padding-bottom: 1rpx;
    padding-left: 0;
    margin-bottom: 20rpx;
}
.right-top{
  z-index: 1;
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 40rpx;
  font-size: 22rpx;
  color: rgba(255,255,255,1);
  text-align: center;
  border-bottom-left-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}


.itemAlter{
  /* border-bottom: 2px solid  linear-gradient(to right,rgb(77,161,255), #93cffc); */
  border-width: 0;
  border-image: linear-gradient(to right,rgb(77,161,255), #93cffc) 30 30; 
  border-bottom-width: 2px;
  border-style: solid;

   padding: 15rpx 0; 
  /* padding-left: 1rem; */
  text-indent: 1rem;
  color: rgb(77,161,255);
  padding-bottom: 30rpx;
}
.item {
    border-color: #eee;
    background-color: #fff;
    color: #444;
    position: relative;
    z-index: 2;
    display: block;
    margin: -1px;
    padding: 16px;
    border-width: 1px;
    border-style: solid;
    font-size: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    box-shadow: 0 0 0 0!important;
}


.item-all{
  padding: 1rem;
}
.item-all .item{
  border-radius: 0;
  margin: 0 !important;
  border-bottom: 1px solid #b4b4b4;
  border-top: 0;
  border-left: 1px solid #b4b4b4;
  border-right: 1px solid #b4b4b4;
}
.item-all .item:nth-child(1){
  border-top: 1px solid #b4b4b4;
}


.item-note {
  display: inline-block;
    color: rgb(133,133,133);
    font-size: 15px;
}
.green{
  color: rgb(143,218,166);
}
.top-avatar {
    background-image: url('https://jianzhugang.oss-cn-shenzhen.aliyuncs.com/ico-02.png');
    background-size: cover;
    text-align: center;
    position: relative;
    top: -1px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    border: 0;
    vertical-align: baseline;
    font: inherit;
}

.top-avatar image {
    width: 80px;
    height: 80px;
    border-radius: 40px;
    border: solid 3px rgba(255, 255, 255, 0.5);
}

.item-text{
  width: 200rpx;
  height: 100%;
  display: inline-block;
}












