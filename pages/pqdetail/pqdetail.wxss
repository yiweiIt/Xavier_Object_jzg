}

.announcement{
  width:100%;
  background:#fff;
  margin:0rpx auto 6rpx auto;
  padding:20rpx 0rpx;
}
.announcement text.prompt{
   display:block;
   width:94%;
   margin:0rpx auto;
   line-height:46rpx;
   font-size:30rpx;
   color: #666;
}
.announcement text.text_prompt,.QRcode text.text_prompt{
  color:#f0940d;
}
.announcement text.phone,.QRcode text.phone{
   color:#4da1ff;
   font-weight:bold;
   padding:0rpx 4rpx;
}



.project-name{
  min-width: 1.8rem;
  display: block !important;
  line-height: 40rpx;
  min-height: 1.8rem;
  float: right;
  text-align: right;
  margin-top: 0 !important;
}

.pro-txt{
   min-height: 1.8rem;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.view-side{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #eee;
  padding: 10rpx 0;
  opacity: .8;
}
.side{
  flex: 1;
}
.small-logo{
  display: block;
  margin: 0 auto;
  height: 28px;
  width: 28px
}
.side text{
  font-size: 20rpx;
  text-align: center;
  display: block;
  margin: 0 auto;
}
.mui-box{
  border-bottom: 0;
}


.side-share{
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn{
  padding: 0;
  margin: 0;
  background-color: transparent;
  border: 0;
  height: 70rpx;
  width: 70rpx;
}


.share-btn::after{ border: none; } 

.share-logo{
  height: 70rpx;
  width: 70rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
}
.pull-image{
  height: 40rpx;
  width: 40rpx;

}



.view-phone{
  position: absolute;
  right: -5rpx;
  top: 50%;
  transform: translate(-50%,-50%);
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  margin-left:0;
  margin-top: 0;
}






.p-red{
  min-width: 18%;
}

.phone_text{
  font-size:24rpx;
  background: rgb(33, 159, 231);
  color: #fff;
  padding: 5rpx 5rpx;
}
.btn-warn{
  background: red;
  margin:8rpx 40rpx;
  color:#fff;
}


.textarea_style{
