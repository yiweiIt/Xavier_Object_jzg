    <image class="small-logo" src="../../image/bottom/fb.png"></image>
    <text>发布</text>
   </navigator>
    <navigator class="side"  url="../wd/wd" open-type="switchTab" >
    <image class="small-logo" src="../../image/bottom/wd.png"></image>
    <text>会员中心</text>
   </navigator>
