
page{
  background:rgba(242,242,242,1);
  color:#666;
  font-size:28rpx;
}
.detailsBox{
  width:100%;
  height:200rpx;
  background:#4da1ff;
  display: flex;
  justify-content: center;
}
.detailsBox image{
   width:140rpx;
   height:140rpx;
   border-radius:50%;
   margin-top:10rpx;
  background:#fff url('https://static.jianzhugang.com/mini/image/logo.png') no-repeat 50% 50%;
  background-size:100% 100%;
   z-index:3;
   border:4rpx solid #4da1ff;
}
.basis{
  z-index:2;
  width:92%;
  /* height:200rpx; */
  background:#fff;
  border-radius:8rpx;
  padding:16rpx 0rpx;
}
.basistip{
  margin:-100rpx auto 10rpx auto;
}
.center{
  margin:20rpx auto;
}
text.basisText{
   width:92%;
   margin:0rpx auto;
   height:80rpx;
   line-height: 80rpx;
   display: block;
   color:#666;
   border-bottom: 2rpx solid rgba(242,242,242,1);
}
.listBox{
  width:92%;
  margin:0rpx auto;
  height:90rpx;
  line-height: 90rpx;
  color:#666;
  border-bottom:2rpx solid rgba(242,242,242,1)
}
.listBox text{
  display: inline-block;
   width:30%;
   float:left;
   height:100%;
   color:#666;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
.listBox text.content,.starBox,.phoneBox{
  display: inline-block;
   width:68%;
   float:right;
   height:90rpx;
   line-height: 90rpx;
   text-align:right;
}
.listBox:last-child{
  border:none;
}
.reportContent{
  width:92%;
  margin:0rpx auto;
  height:140rpx;
  background:#fff;
  padding:15rpx 0rpx;
  border-radius: 6rpx;
}
.reportContent text{
  border:none;
  height:60rpx;
  line-height: 60rpx;
}
.input-area{
  width:90%;
  height:110rpx;
  background:rgba(242,242,242,1);
  border:none;
  margin:0rpx auto;
  border-radius:4rpx;
  color:#666;
  font-size: 28rpx !important;
}

.basisText text.circle {
 display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background: #4da1ff;
  border-radius: 50%;
  margin: 0rpx 12rpx 0rpx 0rpx;
}
.starBox image{
   width:40rpx;
   height:40rpx;
   margin-top:25rpx;
}
.conceal{
  width:60%;
  text-align:right;
  float:left;
}
.operate{
   width:40%;
   float:right;
   height:100%;
}
.phoneview button{
  width:48%;
}
.phoneview button,.getphoneview button{
  height:60rpx;
  margin-top:15rpx;
  font-size:26rpx;
  padding:0rpx;
  color:#fff;
}
.btn_call{
  background:#009933;
  float:left;
}
.btn_jubao{
  background:red;
  float:right;
}
.phone_text{
  background:#0099ff;

}


