
page{background:#f2f2f2;}
.areaBox{
  width:100%;
  height:100rpx;
  line-hieght:100rpx;
  margin:0rpx auto;
  position: fixed;
  z-index: 2;
  margin-top: 0px;
  background:#f2f2f2;
}
.dq,.gz{
  float:left;
  width:50%;
  height:100rpx;
  color:#999;
}
.content-list-box {
  float: left;
  width: 92%;
  margin-top:100rpx;
  margin-left:4%;
}
.listBox{
  width:100%;
  height:280rpx;
  background:#fff;
  margin:10rpx auto 24rpx auto;
  border-top-left-radius:40rpx;
  border-bottom-right-radius:40rpx;
  position:relative;
}
.condition{
  position:absolute;
  top:0rpx;
  right:4%;
  width:18%;
  height:80rpx;
  display: flex;
  /* align-items: center; */
  justify-content: center;
}
.condition image{
   width:117rpx;
   height:69rpx;
}
.l_list{
  width:27%;
  height:190rpx;
  float:left;
  margin:45rpx 0% 45rpx 4%;
  /* background:rgb(242,242,242); */
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-radius:12rpx; */
}
.l_list image{
  width:100%;
  height:190rpx;
  border-radius:12rpx;
}
.r_list{
  width:63%;
  height:200rpx;
  float:left;
  margin:40rpx 0rpx 40rpx 2%;
}
.infoBox{
  width:70%;
  height:100rpx;
}
.infoBox_b{
  width:100%;
   height:70rpx;
}
.infoBox text,.infoBox_b text{
  width:100%;
  display: block;
  height:50rpx;
  line-height:50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
text.listName{
  color:rgb(13,104,206);
  font-size:34rpx;
}
text.listType{
  color:rgb(34,34,34);
  font-size:30rpx;
}
.divideLine{
  width:100%;
  height:10rpx;
  background: url(https://static.jianzhugang.com/mini/image/dividingLine.png) no-repeat 50% 50%;
  background-size:100% 100%;
  margin:10rpx auto;
}
text.address{
  height:40rpx;
  line-height:40rpx;
  font-size:26rpx;
  color:rgb(102,102,102);
}
text.time{
  height:30rpx;
  line-height:30rpx;
  font-size:24rpx;
  color:rgb(102,102,102);
}
.publish{
  background:#0099FF;
  color:#fff;
  position:fixed;
  width:45%;
  height:80rpx;
  line-height: 80rpx;
  bottom:10px;
  left:30%;
  font-size:34rpx;
  text-align:center;
  border-radius:40rpx;
  box-shadow:2rpx 0px 6rpx rgb(0, 153, 255);
  letter-spacing:10rpx;
}