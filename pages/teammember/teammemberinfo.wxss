/* pages/teammember/teammemberinfo.wxss */
.team_form{
  width: 100%;
  height: auto;
  margin-top: 50rpx;
}
.team_form .row{
  padding-left: 15px;
  padding-right: 15px;
  border-bottom: 1rpx solid  #eaeaeaea;
  height: 50px;
  padding-top:25rpx;
  /* padding-bottom: 5rpx; */
}
.team_form label{
  display:block;
  color:#666666;
  font-size: 30rpx;
}
van-button{
  width: 48%;
  height: 40rpx !important;
  line-height: 38rpx !important;
}
.btn_div{
  width: 90%;
  margin:50rpx auto 0rpx auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.van-button--large {
  width: 100%;
  height: 40px !important;
  line-height: 38px !important;
}
input{
  font-size: 32rpx;
}
.btn_div .edit{
  color: #fff;
  background-color: #1989fa
}
.btn_div .delete{
  color: #fff;
  background-color: #f44;
}
.btn_div button{
  width: 45%;
  font-size: 32rpx;
  height: 40px;
  line-height: 38px;
  color: #fff;
  background-color: #1989fa;
  border-radius: 2px;
}
.picker{
  font-size: 32rpx;
}
