page{
  background:#fff;
}
.balance{
  width:100%;
  background:#fff;
  height:100%;
  position: relative;
}
.balanceTop{
  position:absolute;
  width:100%;
  height:317rpx;
  background:url("https://static.jianzhugang.com/mini/newIcon/balanceTopBg.png") no-repeat 50% 50%;
  background-size:100% 100%;
}
.balanceTopBox{
  width:100%;
  height:180rpx;
  margin:50rpx auto;
}
.balanceTopBox text{
  display: block;
  width:92%;
  margin:0rpx auto;
}
.balanceTopBox text.text{
  color:#fff;
  font-size:28rpx;
  height:60rpx;
  line-height:60rpx;
  font-weight: 400;
}
.balanceTopBox text.number{
   color:#FFE96B;
   font-size:60rpx;
   height:120rpx;
   line-height:120rpx;
   font-weight: 500;
}
.balanceInfo{
  position:absolute;
  width:100%;
  height:auto;
  background:#fff;
  border-top-left-radius:40rpx;
  border-top-right-radius:40rpx;
  top:270rpx;
  left:0rpx;
}
.balanceInfoBox{
  width:92%;
  height:auto;
  margin:50rpx auto;
}
.balanceInfo_title{
  width:100%;
  height:40rpx;
  line-height:40rpx;
  border-left:6rpx solid #4DA0FE;
  color:#333;
  text-indent:20rpx;
  font-size:30rpx;
}
.balanceInfo_list{
  width:100%;
  height:200rpx;
  /* background:green; */
  margin:30rpx auto 20rpx auto;
}
.balanceInfo_list image{
  width:100%;
  height:100%;
}