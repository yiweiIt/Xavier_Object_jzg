/* pages/wallet/wallet.wxss */
page{
  background:#4DA1FF;
}
.walletTopBg{
  width:100%;
  height:1240rpx;
  position:relative;
}
.walletTopBg image{
  width:100%;
  height:798rpx;
}
.walletQR{
  position:absolute;
  width:100%;
  height:600rpx;
  bottom:0rpx;
}
.walletQRBox{
  width:88%;
  height:565rpx;
  background:#fff;
  margin:35rpx auto 0rpx auto;
  position:relative;
  border-radius:20rpx;
}
.walletQRBoxTitle{
  position:absolute;
  width:50%;
  height:70rpx;
  line-height:70rpx;
  background:#4DA1FF;
  top:-35rpx;
  left:25%;
  border-radius:6rpx;
}
.walletQRBoxTitle text{
  width:100%;
  height:100%;
  display: block;
  color:#fff;
  font-size:30rpx;
  text-align:center;
  letter-spacing: 2rpx;
}
.QRImg{
  position: absolute;
  width:100%;
  height:430rpx;
  top:40rpx;
}
.QRImg image{
  width:360rpx;
  height:360rpx;
  display: block;
  margin:35rpx auto;
}
.walletQRTip{
  position:absolute;
  width:100%;
  height:95rpx;
  line-height:95rpx;
  bottom:0rpx;
  background: #ECF5FF;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.walletQRTip text{
  display: block;
  width:100%;
  font-weight:400;
  color: #333;
  font-size:28rpx;
  text-align:center;
}
.features{
  width:88%;
  height:auto;
  background: rgba(250,250,250,0.15);
  border-radius: 20px;
  margin:40rpx auto;
}
.list{
  width:90%;
  height:100rpx;
  margin:0rpx auto;
  border-bottom:1rpx solid rgba(221,221,221,0.17);
  font-weight:400;
}
.list:last-child{
  border-bottom:none;
}
.iconBox{
  width:70rpx;
  height:100%;
  float:left;
}
.list image{
  width:42rpx;
  height:42rpx;
}
.flexCenter{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.list text{
  height:100rpx;
  line-height:100rpx;
  display: inline-block;
  font-size:30rpx;
  color:#fff;
}