}
.tips_div{
  height: 90rpx;
  line-height:90rpx;
  background-color: #ffffff;
  padding-left: 30rpx;
}
.tips{
  font-size: 28rpx;
}
.cor{
  color: #DB0909;
}
.scanCard{
  width:16%;
  height:70rpx;
  float:right;
  display: flex;
  align-items: center;
  justify-content: center;
}
.scanCard image{
  display:block;
  width:50rpx;
  height:50rpx;
}

.avatar{
  width:100%;
  height:260rpx;
  border-bottom:1rpx solid rgba(242,242,242,1);
}
.avatarText{
  display:block;
  margin-left:30rpx;
  height:70rpx;
  line-height:70rpx;
  font-size:28rpx;
}
.avatarBox{
  width:160rpx;
  height:160rpx;
  background:rgba(242,242,242,1);
  margin-left:30rpx; 
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar image.iconImg{
   width:60rpx;
}
.idPhotoBox {
  display: flex;
  align-items: center;
  justify-content: center;
}
.idPhotoBox image{
  width:140rpx;
}
.ui_uploader{
  margin-top:0rpx;
}

.idPicture,.idPhoto{
  width:100%;
  background:#fff;
  height:400rpx;
  margin:15rpx auto;
  font-size:28rpx;
}
.idPicture{
  height:640rpx;
}
.idPicture{
  margin:0rpx !important;
}
.pictureBox{
  display: block;
  margin:0rpx auto;
  width:92%;
  height:100rpx;
  line-height: 100rpx;
  border-bottom:1rpx solid rgba(242,242,242,1); 
}
._picture,._photo{
   width:92%;
   height:260rpx;
   margin:10rpx auto;
}
.left,.right{
   width:47%;
   height:260rpx;
   border-radius:8rpx;
   position:relative;
   background:rgba(242,242,242,1);
}
._pictureBox{
   width:100%;
   height:260rpx;
   display: flex;
   align-items: center;
   justify-content: center;
}
.left{
  float:left;
}
.right{
  float:right;
}
.left image,.right image{
  width:220rpx;
  height:220rpx;
}
.titleBox{
   width:92%;
   margin:0rpx auto;
   height:80rpx;
   line-height:80rpx;
}
.titleBox text{
  display: inline-block;
  width:50%;
  text-align:center;
  font-size:27rpx;
}
.tips{
   width:92%;
   margin:0rpx auto;
}
.tips text{
  display: block;
}
.tips text._tips{
   font-size:28rpx;
   padding:20rpx 0rpx;
   line-height:50rpx;
}

.clear{
  width:40rpx;
  height:40rpx;
  float:right;
  display: block;
  position:absolute;
  top:-10rpx;
  right:0rpx;
}