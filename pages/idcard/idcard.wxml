<!--pages/idcard/idcard.wxml-->
<form bindsubmit="formSubmit" report-submit="true" bindreset="formReset">
  <!--实名认证  -->
  <view class='smrz'>
    <!--姓名  -->
    <view class='name'>
      <view class='nm'>真实姓名</view>
      <input type="text" maxlength="18" class='p_nm input-box' placeholder-class='input-id' placeholder="输入姓名" value='{{name}}' bindinput="bindName"></input>
    </view>
    <view class='name'>
      <view class='nm'>身份证号</view>
      <input type='text' maxlength="18" class='p_nm input-box idCard' placeholder-class='input-id' placeholder="输入身份证号" value='{{idNum}}' bindinput="bindIdNum"></input>
      <ocr-navigator bind:onSuccess="success" certificateType="idCard" opposite="{{false}}" class="scanCard">
        <image src="http://static.jianzhugang.com/mini/image/camera.png"></image>
      </ocr-navigator>
    </view>
