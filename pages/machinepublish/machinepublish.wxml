<!--pages/machinepublish/machinepublish.wxml-->
<!-- 找机械 -->
<block wx:if="{{machineType=== 'rent'}}">
   <view class="mechanicalBox">
       <view class="list">
          <i>*</i>
          <text>机械分类:</text>
          <picker mode="multiSelector" bindchange="bindMechanicalFormChange" bindcolumnchange="bindMechanicalFormColumnChange" value="{{jxlIndex}}" range="{{jxlNamesArray}}">
             <input disabled="disabled" value="{{machineName}}" class="pickerInput"></input>
          </picker>
       </view>
       <view class="list">
          <i>*</i>
          <text>所需数量:</text>
          <input type="number" maxlength='5' placeholder='请输入所需机械数量' value='{{machineAmount}}' bindinput="bindAmountInput" focus="{{amount}}"></input>
       </view>
       <view class="list">
          <view class="_list">
            <i>*</i>
            <text>租赁价格:</text>
            <input type="number" maxlength='6' value="{{machinePrice}}" focus="{{price}}" bindinput='bindPriceInput' placeholder='请输入租用价格'></input>
          </view>
          <view class="_list_">
            <picker bindchange="machinePriceChange" value="{{machinePriceIndex}}" range="{{machinePriceArray}}">
              <input placeholder='请选择租用类型' disabled="disabled" value="{{machinePriceValue}}" class="pickerInput"></input>
            </picker>
          </view>
       </view>
       <view class="list">
          <i>*</i>
          <text>联系人:</text>
          <input  maxlength="10" type='text' placeholder='请输入联系人' value="{{machineContacts}}" focus="{{contacts}}" bindinput='bindContactsInput'></input>
       </view>
       <view class="list">
          <i>*</i>
          <text>联系电话:</text>
          <input  maxlength="11"  type='number' placeholder='请输入联系电话' value="{{machineMoblie}}" focus="{{phone}}" bindinput='bindMoblieInput'></input>
       </view>
       <view class="list" wx:if="{{!isShow}}">
          <i>*</i>
          <text>验证码:</text> 
          <input type='number' maxlength="4" placeholder='请输入验证码' bindinput='bindCodeInput' class="vocd"></input>
          <view class="btnBox_bg">
               <block wx:if="{{isInCode===1}}">
                  <button class="btn" bindtap='getVerifyCode'>获取验证码</button>
               </block>
               <block wx:else>
                  <button class="btn" style='opacity:0.6;'>{{isCodeTime}}s后再发送</button>
               </block>
          </view>
       </view>
       <view class="list modalList">
          <i>*</i>
          <text>机械地区:</text>
          <area-third-input-modal areaTitle="{{localType}}" bindchangeThirdArea="changeThirdArea"></area-third-input-modal> 
          <!-- <area-third-modal areaTitle="{{localType}}" bindchangeThirdArea="changeThirdArea"></area-third-modal> -->
       </view>
       <view class="list">
          <i>*</i>
          <text>详细地址:</text>
          <input  type='text'  placeholder='详细地址' value="{{streetaddress}}" focus="{{addressInput}}" bindinput='bindStreetInput'></input>
       </view>
       <!-- <view class="list">
          <view class="_list">
            <i>*</i>
            <text>机械工期:</text>
            <picker mode="date" value="{{date}}" bindchange="bindDateChange">
              <input maxlength="18" placeholder='请选择开始时间' disabled="disabled" value="{{dates}}" class="pickerInput"></input>
            </picker>
          </view>
          <view class="_list_">
            <picker mode="date" value="{{end}}" bindchange="bindEndChange">
              <input maxlength="18" placeholder='请选择结束时间' disabled="disabled"  value="{{ends}}"  class="pickerInput"></input>
            </picker>
          </view>
       </view> -->
       <view class="details">
         <view class="list">
          <i>*</i>
          <text>备注:</text>
         </view>
          <textarea class="input-area" maxlength='100' placeholder='请输入备注'  value="{{mark}}" focus="{{marks}}" bindinput="bindMarkInput"  adjust-position="false" >
          </textarea> 
       </view>
       <view class='remark'>
         <button class="btn-sub" bindtap='rentSubmit'>立即发布</button>
       </view>
   </view>
</block>

