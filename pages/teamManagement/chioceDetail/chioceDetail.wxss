page{
  background-color: rgba(242,242,242,1);
  color:#333;
}
.questionBg{
  width:100%;
  height:200rpx;
  background:  url(http://static.jianzhugang.com/mini/image/upper_apex_bg.png) no-repeat 50% 50%;
  background-size: 100% 100%;
  position: relative;
}
.answerSheet{
   width:92%;
   background:#fff;
   margin:0rpx auto;
   position:absolute;
   top:70rpx;
   left:4%;
   border-radius:10rpx;
}
.topic{
   width:94%;
   line-height:54rpx;
   margin:30rpx auto;
   font-size:30rpx;
   padding:0rpx;
}
.topic text{
  color:#333;
}
.topic text.thematic{
   color:#b59c23 ;
   padding:0rpx 10rpx 0rpx 0rpx;
}
.optionBox{
  width:93%;
  margin:20rpx auto;
  position:relative
}
.buttonBox{
  position:absolute;
  top:12rpx;
  left:-12%;
  width:10%;
  float:left;
  display: flex;
  align-items: center;
  justify-content: center;
}
.selectButton{
  width:40rpx;
  height:40rpx;
  line-height:38rpx;
  text-align:center;
  font-size:28rpx;
  border-radius:50%;
  border:1rpx solid #8f8f8e;
  color:#888;
  margin-top:10rpx;
}
.buttonBox image{
  margin-top:10rpx;
   width:42rpx;
   height:42rpx;
}
.selectContent{
  position:relative;
  width:89%;
  line-height:60rpx;
  letter-spacing:2rpx;
  float:right;
  font-size:29rpx;
  padding:10rpx 0rpx;
}
.optionBox:last-child .selectContent{
  padding-bottom:70rpx;
}
.dpn{
  display: none;
}
.resolve{
  width:92%;
  background:#fff;
  margin-left:4%;
  border-radius:10rpx;
  font-size:29rpx;
  padding:0rpx 0rpx 40rpx 0rpx;
}
.Parsing{
   display: block;
   width:180rpx;
   height:60rpx;
   line-height:60rpx;
   background:#fda067;
   color:#fff;
   text-align:center;
   border-top-left-radius:10rpx;
   border-bottom-right-radius:10rpx;
}
.correct,.resolveContent{
  display: block;
  width:92%;
  margin:0rpx auto;
  line-height:60rpx;
}
.resolveTitle{
    color:rgb(255,77,77);
}
