page{background:#fff;}
.payBox{
  width:100%;
  height:500rpx;
  display:-webkit-flex;
  display:flex;
  align-items: center;
  justify-content: center;
  align-content:center; 
  flex-wrap:wrap;
}
.payBox image{
  width:408rpx;
  height:320rpx;
}
.payTip{
  width:100%;
  height:60rpx;
  display:-webkit-flex;
  display:flex;
  align-items: center;
  justify-content: center;
}
.payTip image{
  width:40rpx;
  height:40rpx;
}
.payTip text{
  padding-left:6rpx;
  color:#666;
}
.addOperationBox{
  color:#fff;
  width:100%;
  height:90rpx;
  font-size:36rpx;
  text-align:center;
  margin-top:20rpx;
}
.buttonBox{
  width:50%;
  height:80rpx;
  float:left;
}
.buttonBox button{
  width:70%;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  border:1rpx solid #4da1ff;
}
.btn-dopushmore{
  background:#4da1ff;
  color:#fff;
}
.btn-dopush{
  background:#fff;
  color:#4da1ff;
}
