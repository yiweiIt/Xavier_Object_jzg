/* pages/addDispatch/addDispatch.wxss */
.dispatch{
  width:92%;
  overflow: hidden;
  height:100%;
}
.listBox{
  width: 92%;
  margin:20rpx auto;
  padding-bottom:10rpx;
  /* border-top:2rpx solid rgba(242, 242, 242, 1); */
}
.listBox:first-child{
  border:none;
}
.list{
  width:100%;
  height:90rpx;
  line-height:90rpx;
}
.list i{
  font-style: normal;
  float:left;
  color:red;
  display:inline-block;
}
.list text{
  display: inline-block;
  font-size:32rpx;
  width:26%; 
  height: 100%;
  float:left;
  margin-left:1%;
}
.list input,.arear{
  width:66%;
  float:left;
  height:70rpx;
  margin:10rpx 0rpx;
  padding:0rpx 2%;
  border-radius:6rpx;
  background:rgba(242, 242, 242, 1);
}
.arear view,.arear view input{
   height:80rpx;
   line-height:80rpx;
   font-size:32rpx;
}
.arear view input{
   padding:0rpx;
   height:70rpx;
   line-height:70rpx;
   width:100%;
}
.section{
  width:98%;
  margin:0rpx auto;
  
}
.sectionBox{
   height:220rpx;
   /* background:red; */ 
  background: rgba(242, 242, 242, 1);
   border:1px solid rgba(242, 242, 242, 1);
}
.input-area{
  height:200rpx;
  line-height:36rpx;
  border:none;
  /* background: rgba(242, 242, 242, 1);
  border:1px solid rgba(242, 242, 242, 1); */
}
.clear{
  width:100%;
  height:40rpx;
}
.sectionBox text.tips{
  display: block;
  width: 96%;
  height:20rpx;
  text-align:right;
  font-size:24rpx;
  color:#aaa;
  margin:-20rpx auto 0rpx auto;
}
.backTip{
  /* margin-top:400rpx; */
  padding-bottom:60rpx;
}
.Dispatch{
  border:none;
  background:none;
  outline: none;
  width:92%;
  height:80rpx;
  line-height: 80rpx;
  font-size:32rpx;
  background:rgba(22, 155, 213, 1);
  color:#fff;
  /* margin:390rpx auto 20rpx auto; */
}
.Dispatch::after{
  border: none;
}
.list input.noBg{
  background:none;
  text-align:right;
}
