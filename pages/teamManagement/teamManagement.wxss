.announcement{
   width:100%;
   height:80rpx;
   line-height: 80rpx;
   padding:5rpx 0rpx;
}
.announcement image{
  width:36rpx;
  height:36rpx;
  margin:24rpx 2rpx 20rpx 0rpx;
  display:inline-block;
  float:left;
  margin-left:0px;
}
.announcement .content swiper{
  width:100%!important;
}
.announcement .content swiper i,.announcement .content swiper swiper-item{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.announcement .content,.announcement .content swiper{
  width:72%;
  height:80rpx;
  float:left;
  margin-left:10rpx;
  font-size: 30rpx;  
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.announcement .content i,.announcement .content swiper i{
  color:#f59a23;
  font-size:22rpx;
  padding-right:10rpx;
}
.announcement .more{
  font-size:24rpx;
  text-align: right;
  color: #02a7f0;
}
.announcement button{
  width:68rpx;
  float:right;
  margin-right:0px;
  border:none!important;
  background:none;
  outline: none;  
  padding:0px;
  margin-top:12rpx;
}
.knowledge{
  width:100%;
  border-top:1rpx solid #d7d7d7;
  padding-top:20rpx;
}
text.knowTitle{
  width:100%;
  height:110rpx;
  line-height: 110rpx;
  font-size:30rpx;
  font-weight: bold;
  display: block;
  text-indent: 2.5%;
}
.half{
  width:64% !important;
  float:left
}
.rightHalf{
  width:31%;
  height:66rpx;
  line-height:66rpx;
  background:#4da1ff;
  margin-top:20rpx;
  font-size:27rpx;
  color:#fff;
  float:right;
  margin-right:-8%;
  border-radius:30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.rightHalfText{
  width:68%;
  height:100%;
  font-size:26rpx;
  text-align:right;
}
.rightHalfBox{
  width:20%;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rightHalfBox image{
  width:30rpx;
  height:30rpx;
}
.listBox{
  width:100%;
  display:flex;
  flex-wrap:wrap;
  flex-direction: row;
  justify-content: flex-start;
}
.listButton{
  width:21%;
  height:125rpx;
  /* background: red; */
  margin:0rpx 2.5% 20rpx 2.5%;
}
.listButton:nth-child(4n){
   margin-right:0rpx;
}
.listButton:nth-child(4n+1){
   margin-left:0rpx;
}
.listButton button{
  border:none;
  background:none;
  outline: none;
  width:100%;
  height:125rpx;
  padding: 0px;
}
.listButton button::after{
  border:none;
}
.announcement button::after,.listButton button::after{
  border:none;
}
.listButton buttont{
  width:100%;
  height:160rpx;
  padding: 0px;
}
.listButton button image{
  padding:0rpx 0rpx 20rpx 0rpx;
  /* border:1px solid #d7d7d7; */
  border-radius:0rpx;
  width:70rpx;
  height:70rpx;
  background:#fff;
  display:block;
  margin:0px auto;
}
.listButton button image.bigImg{
  width:68rpx;
  height:68rpx;
  padding:6rpx 0rpx !important;
}
.listButton button image.smallImg{
  width:50rpx;
  height:50rpx;
  padding:19rpx 0rpx !important;
}
.listButton button text{
  width:100%;
  height:30rpx;
  line-height:30rpx;
  font-size:30rpx;
  display:block;
  margin:0px ;
  padding:0px;
}
.dpn{
  display: none;
}
