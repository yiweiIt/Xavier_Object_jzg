page{background:rgba(242,242,242,1);}
.detailInfo{
  width:100%;
  height:auto;
  background:#fff;
  margin:20rpx auto;
  border-radius:8rpx;
  padding-bottom:30rpx;
}
.titleBox{
   width:90%;  
   height:140rpx;
   margin:0rpx auto;
  border-bottom:2rpx solid rgba(242,242,242,1);
}
.titleBox .left{
  width:70%;
  height:100rpx;
  float:Left;
  margin-top:20rpx;
}
.titleBox .left text{
  display:block;
  width:100%;
  height:50rpx;
  line-height: 50rpx;
  font-size:30rpx;
  color:#333;
}
.titleBox .right{
  width:30%;
  float:right;
  height:100%;
  line-height:140rpx;
  text-align:right;
  font-size:26rpx;
  color:#333;
}
.detailInfo text.title{
  padding-top:20rpx;
}
.detailInfo text.title,.detailInfo text.titleInfo{
   width:92%;
   line-height: 50rpx;
   display:block;
   margin:0rpx auto;
   color:#888;
   font-size:28rpx;
}