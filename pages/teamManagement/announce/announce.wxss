.content{
  width:92%;
  height:80rpx;
  margin:26rpx auto;
}
.content input{
  width:100%;
  height:80rpx;
  background:rgba(242, 242, 242, 1);
  border-radius:8rpx;
  text-indent:16rpx;
  color:#333;
}
.section{
  width:92%;
  margin:0rpx auto;
  background:rgba(242, 242, 242, 1);
  border:1px solid rgba(242, 242, 242, 1);
}
.input-area{
  border:none;
  height:240rpx;
  line-height: 40rpx;
  color:#333;
}
.clear{
  width:100%;
  height:40rpx;
}
.clear text{
  display: block;
  width: 96%;
  text-align:right;
  font-size:26rpx;
  color:#aaa;
}
.Announce{
  width: 92%;
  margin:40rpx auto;
}
.Announce button{
  height:94rpx;
  line-height:94rpx;
   border: none;
   background:rgba(2, 167, 240, 1);
   outline: none;
   color:#fff;
   font-size:32rpx;
}