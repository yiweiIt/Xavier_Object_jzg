  padding:20rpx 30rpx 60rpx 30rpx;
}
.input-title {
  font-size: 32rpx !important;
}
.input-box{
  font-size: 32rpx !important;
}

.btn{
  width:28%;
  display: inline-block;
  height:70rpx;
  line-height:70rpx;
  padding:0rpx 8rpx;
  top:0rpx;
  color: #fff;
  border-radius: 2px;
  background-color:#1989fa;
  border-color:#1989fa;
