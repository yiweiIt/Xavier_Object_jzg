  color: transparent
}

.btn-goReSend{
  margin-top:10rpx;
  margin-bottom:20rpx;
  color: #fff !important;
  background-color: #4e9fe3 !important;
}


@keyframes myfirst
{
  0%   {margin-left:750rpx;}
  100% {margin-left:-1500rpx;}
}
.hide{
  display: none;
}
.input-itm {
  padding: 8rpx 0rpx;
  display: flex;
  align-items: center;
}
.input-itm .input-box{
  height: 60rpx;
  border:none;
  font-size: 28rpx !important;
}
.input-title{
  width: 20% !important;
  font-size: 28rpx !important;
}
.input-itm .error{
  color:red;
  float:right;
  margin-top:-60rpx;
  margin-right:10rpx;
}
.input-itm .error_code{
  color:red;
