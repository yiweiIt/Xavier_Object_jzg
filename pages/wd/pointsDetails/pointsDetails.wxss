.pointsBoxList{
  width:100%;
  height:380rpx;
  background:red;
  background:rgb(77,161,255) url(https://jianzhugang.oss-cn-shenzhen.aliyuncs.com/mini/newIcon/pointsDetails.jpg)50% 50% no-repeat;
  background-size:auto 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pointsBox{
  width:90%;
  margin:0rpx auto;
  height:120rpx;
}
.pointsBox text{
  width:100%;
  display: block;
  text-align:center;
}
.pointsBox text:nth-child(1){
   height:60rpx;
   line-height:60rpx;
   font-size:44rpx;
   color:#efefef;
}
.pointsBox text:nth-child(2){
  height:50rpx;
  line-height:50rpx;
  font-size:30rpx;
  font-weight: bold;
  color:#fff;
}
.selectBox{
   position:absolute;
   width:94%;
   height:140rpx;
   background:#fff;
   left:3%;
   bottom:-70rpx;
}
.flex{
  display: flex;
  align-items: center;
  justify-content: center;
  color:#333;
}
.selectBox .active{
  color:#4da1ff;
}
.selectBox image{
  width:40rpx;
  height:40rpx;
  padding:0rpx 10rpx;
}
.left{
  float:left;
  width:49.5%;
  height:140rpx;
  border-right:2rpx solid rgba(242,242,242,1);
}
.right{
  float:right;
  width:49.5%;
  height:140rpx;
}
.pointsboxBg{
  width:94%;
  margin:90rpx auto 20rpx auto;
  min-height: calc(100vh - 600rpx);  
}

.pointsList{
   width:100%;
   height:156rpx;
   background:#fff;
   margin:12rpx auto;
}
.pointsList .leftIcon{
   float:left;
   width:14%;
   height:100%;
}
.pointsList .leftIcon image.RechargeIcon{
   width:96rpx;
   height:50rpx; 
}
.pointsList .leftIcon image.signIn,.pointsList .leftIcon image.inviteIcon,.pointsList .leftIcon image.consumeIcon{
   width:50rpx;
   height:50rpx; 
}
.pointsList .centerBox{
  float:left;
  width:68%;
  height:100%;
}
.pointsList .rightNum{
   float:right;
   width:18%;
   height:100%;
   font-weight: bold;
   font-size: 40rpx;
   color: #ea9518;
}
.centerBox text{
  display:block;
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color:#333;
  font-size:28rpx;
  height:50rpx;
  line-height: 50rpx;
}
.consume text:nth-child(1){
  height:50rpx!important;
  line-height: 50rpx!important;
  padding-top:5rpx!important;
}
.centerBox text:nth-child(1){
  height:54rpx;
  line-height: 54rpx;
  padding-top:24rpx;
}
