/* pages/myMachineDetail/myMachineDetail.wxss */
/*提交按钮  */
.btn {
  float: left;
  width: 100%;
  height: 80rpx;
  background-color: #4e9fe3;
  color: white;
  line-height: 80rpx;
}

image {
  width: 70rpx;
  height: 70rpx;
}

.mui-view {
  position: relative;
  margin-top: 0;
  margin-bottom: 0;
  padding-left: 0;
  background-color: #fff;
}

.mui-cell {
  background: white;
  position: relative;
  overflow: hidden;
  padding: 0rpx 30rpx;
  border-bottom: 1rpx solid #c1c1c1;
  font-family: "微软雅黑";
  min-height: 3rem;
}

.mui-cell:after, .mui-cell:before {
  content: " ";
  display: table;
}

.mui-cell:after {
  clear: both;
}

.p-red {
  font-size: 1.1rem !important;
  color: red !important;
}

.p-gray {
  font-size: 1.0rem !important;
  color: #828586 !important;
}

.p-title {
  font-size: 1rem !important;
  color: #404141 !important;
  font-weight: normal;
}

.p-spec {
  text-indent: 2rem;
  font-size: 1rem !important;
  color: #828586 !important;
  float: right;
  height: 2.8rem;
  line-height: 2.8rem;
}

.p-value {
  font-size: 1rem !important;
  color: #09f !important;
  font-weight: normal;
}

.p-black-normal {
  font-size: 0.9rem !important;
  color: #404141 !important;
  position: inherit;
}

.mui-box {
  position: relative;
  margin-top: 20rpx;
  padding: 10rpx 30rpx;
}

.btn-dopush {
  border: 1rpx solid #e4e4e4;
  border-radius: 10rpx;
  padding: 5rpx 25rpx;
  font-size: 1rem !important;
  background-color: #4e9fe3;
  margin: 8rpx 40rpx;
  color: #fff;
}

.p-left {
  display: inline-block;
  line-height: 21px;
}

.pull-right {
  float: right;
  display: inline-block;
  margin-top: -20rpx;
  text-align: center;
}

.btn-doCall {
  font-size: 0.7rem !important;
  color: #fff;
  background-color: #4e9fe3;
  margin-left: 20rpx;
  margin-top: 16rpx;
  float: right;
}

.spc {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

picker {
  position: absolute;
  width: 400rpx;
  top: 50%;
  right: 20rpx;
  transform: translate(0, -50%);
  display: flex;
  justify-content: flex-end;
}

picker .flter-itm image {
  height: 25rpx;
  width: 32rpx;
}
.v-mui-box {
  padding-bottom: 50px;
}