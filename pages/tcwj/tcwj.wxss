page{background:rgb(242,242,242)}
.hardware{
  width:100%;
}
.hardwareBox{
  width:94%;
  height:230rpx;
  background:#fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin:24rpx auto;
  border-radius:10rpx;
}
.contentBox{
  width:90%;
  height:180rpx;
  display: flex;
}
.imageBox{
   width:25%;
   height:100%;
   float:left;
   display: flex;
   align-items: center;
   justify-content: center;
}
.imageBox image{
  width:160rpx;
  height:160rpx;
}
.infoBox{
  width:72%;
  margin-left:3%;
  height:10-0%;
}
.infoText,.info{
  display: block;
  width:100%;
  height:62rpx;
  line-height:62rpx;

}
.infoText{
   font-size:30rpx;
   color:#222;
}
.info{
  display: flex;
  height:56rpx;
  line-height:56rpx;
}
.overHide{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.infoIcon{
  flex:0 0 10%;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.infoIcon image{
  width:36rpx;
  height:36rpx;
}
.infoTitle{
  flex:0 0 28%;
  height:100%;  
  font-size:28rpx;
  color:#666;
}
.infomation{
  flex:0 0 62%;
  height:100%; 
  font-size:28rpx;
  color:#666;
}