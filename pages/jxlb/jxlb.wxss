/*机械列表  */
page {
  height: 100%;
  background-color: rgb(242,242,242);
}

.publish{
  background: #4e9fe3;
  color:#fff;
  position:fixed;
  width:50%;
  padding:15rpx;
  bottom:30rpx;
  left:25%;
  font-size:30rpx;
  text-align:center;
  border-radius:50px;
  /* box-shadow:0px 0px 10px rgb(0, 195, 255); */
  box-shadow:0px 0px 10rpx #4e9fe3;
  letter-spacing:10rpx;
}
swiper {
  height: 100vh;
  margin-top: 220rpx;
}

.swiper-tab {
  width: 100%;
  height: 110rpx;
  border-bottom: 4rpx solid #f2f2f2;
  margin: auto;
  margin-top: 0rpx;
  box-shadow: #f0f0f0 -5rpx -5rpx 18rpx 3rpx;
  display: flex;
  justify-content: center;
}

#list {
  text-align: center;
  flex: 1;
  margin:0rpx 10rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
  height:100rpx;
  line-height: 100rpx;
  display: inline-block;
  background:#fff;
}
.swiper-tab-item {
  display: inline-block;
  color: #4da2ff;
}

.swiper-box {
  display: block;
  width: 100%;
}

.on {
  color: #4da2ff;
  border-bottom: 5rpx solid rgb(77,161,255);
}

.table {
  float: left;
  width: 100%;
  background-color: white;
  margin-top:260rpx;
}

.text {
  float: right;
  font-size: 25rpx;
  color: #919191;
  margin-top: 100rpx;
  margin-right: 30rpx;
}
.area {
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  padding: 6px 0;
  height:84rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-shadow: 0rpx 5rpx 10rpx 1rpx #f0f0f0;
  /* margin-bottom: 10rpx; */
}

/*地区  */
.area .dq {
  font-size: 28rpx;
  width: 49%;
  display: flex;
  justify-content: center;
}

.area .gz {
  font-size: 28rpx;
  width: 49%;
  display: flex;
  justify-content: center;
}
/*中间分隔线  */
.area .center {
  color: rgba(0, 0, 0, 0, 0.3);
  height: 50rpx;
  flex: 1;
  text-align: center;
}

.area .flter-itm {
  float: left;
  font-size: 30rpx;
  height: 35rpx;
  overflow: hidden;
  line-height: 35rpx;
  white-space: nowrap;
}

.area .image image {
  width: 25rpx;
  height: 15rpx;
}

.area .image {
  margin: -40rpx 0rpx 0rpx 270rpx;
}

.flter-itm {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.flter-image {
  margin-top: -5rpx;
}

.flter-image image {
  height: 15rpx;
  width: 25rpx;
}

.item {
  box-shadow: #e4ebf3 -1px 5px 6px;
}
.item .desc {
  color: #444;
}

.desc image {
  width: 29rpx;
  height: 29rpx;
  margin-right: 15rpx;
}

.hs {
  color: red;
}

.img {
  float: left;
  width: 170rpx;
  height: 170rpx;
  border-radius: 10rpx;
}

.being {
  background: rgba(255,165,0,1);
  color: #fff;
}

.header {
  position: fixed;
  z-index: 999;
  width: 100%;
  top: 0;
  background: #fff;
  height: 200rpx;
}
.btn-dopush{
  border: 1rpx solid #e4e4e4;
  border-radius: 10rpx;
  padding:5rpx 25rpx;
  font-size: 1rem !important;
  background-color: #4e9fe3;
  margin:0 40rpx;
  color:#fff;
}

.content-list {
  margin-bottom: 0;
  padding-bottom: 60rpx !important;
}

scroll-view {
  background: #f7f7f7;
}
.item .title{
  color: #000;
  margin-bottom:0rpx;
  height:40rpx;
  line-height: 40rpx;
  overflow: hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}

/*工程找机械*/
.mechanicalBox{
  width:100%;
  /* height:600rpx; */
}
.mechanical,.manipulator{
   width:92%;
   height:340rpx;
   background:#fff;
   margin:30rpx auto;
   box-shadow: 3rpx 3rpx  8rpx rgba(74, 74, 74, 0.15);
}
.manipulator{
  height:290rpx;
  position:relative;
}
.mechanical:last-child{
  margin-bottom:70rpx;
}
.titleBox{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  border-bottom:1rpx solid #ddd;
  position:relative;
}
.titleBox text.mechanicalTitle{
   display: block;
   width:75%;
   height:90rpx;
   font-size:30rpx;
   color:#222;
   margin-left:5%;
}
.overhide{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.tipBox{
   position:absolute;
   width:144rpx;
   height:36rpx;
   top:27rpx;
   right:-14rpx;
   box-shadow: -1px 3px 9px #ffb588;
   display: flex;
   align-items: center;
   border-radius:10rpx;
   justify-content: flex-end;
}
.orange{
   box-shadow: -1px 3px 9px #ffb588;
}
.gray{
   box-shadow: -1px 3px 9px #adadad;
}
.tipBox image{
  width:144rpx;
  height:36rpx;
}
.listBox{
  width:90%;
  height:210rpx;
  margin:20rpx auto;
}
.info{
  width:100%;
  height:50rpx;
  line-height:50rpx;
  display: flex;
  align-items: center;
}
.infoIcon{
  flex: 0 0 7%;
  height:100%;
  display: flex;
  align-items: center;
}
.infoIcon image{
  width:32rpx;
  height:32rpx;
}

.infoIcon image.imageIcon{
  width:30rpx;
  height:30rpx;
}
.infoName{
  flex: 0 0 23%;
  font-size:28rpx;
  color:#666;
}
.infomation{
  flex:1;
  height:100%;
  font-size:28rpx;
  color:#666;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.infomation image{
   width:30rpx;
   height:28rpx;
   padding:0rpx 8rpx 0rpx 0rpx;
}
.hiderTip{
   z-index:11;
   width:76rpx;
   height:76rpx;
   position:absolute;
   top:-2rpx;
   left:-2rpx;
}
.hiderTip image{
  width:100%;
  height:100%;
}